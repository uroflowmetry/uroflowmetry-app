<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <LinearLayout
        android:id="@+id/itemBackground"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dip_50">
        <me.grantland.widget.AutofitTextView
            android:id="@+id/timeViewer"
            android:gravity="center"
            android:maxLines="2"
            android:paddingStart="@dimen/dip_5"
            android:paddingEnd="@dimen/dip_5"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            tools:ignore="HardcodedText" />
        <me.grantland.widget.AutofitTextView
            android:id="@+id/voidedVolumeViewer"
            android:gravity="center"
            android:maxLines="2"
            android:paddingStart="@dimen/dip_5"
            android:paddingEnd="@dimen/dip_5"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            tools:ignore="HardcodedText" />
        <me.grantland.widget.AutofitTextView
            android:id="@+id/mDurationViewer"
            android:gravity="center"
            android:maxLines="2"
            android:paddingStart="@dimen/dip_5"
            android:paddingEnd="@dimen/dip_5"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            tools:ignore="HardcodedText" />
        <me.grantland.widget.AutofitTextView
            android:id="@+id/flowRateViewer"
            android:gravity="center"
            android:maxLines="2"
            android:paddingStart="@dimen/dip_5"
            android:paddingEnd="@dimen/dip_5"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            tools:ignore="HardcodedText" />
    </LinearLayout>
</RelativeLayout>